<h1>List of photos</h1>

<hr>
  <form action="/add_photo%>">

  <label for="im">Image</label>
    <input id="im" name="q_image" placeholder="Enter a URL for the image"> 

  <label for="cap">Caption</label>
    <textarea id="cap" name="q_caption" placeholder="Enter a caption for the photo...">
    </textarea>

    <label for="own">Owner ID</label>
    <input if="own" name="q_ownid" placeholder="Enter an ID of a user">

    <button>Add photo</button>
  </form>
</hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

 <% @list_of_photos.each do|a_photo| %>
  <tr>
    <td>
      <img src=<%= a_photo.image%>">
    </td>

    <td> 
    <%= a_photo.caption%>
    </td>

    <td>
      <%= a_photo.poster.username%>
    </td>

    <td>
      <%= a_photo.created_at%>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">
        Show details
      </a>
    </td>
  </tr>
    <% end %>
  </table>
